<?xml version="1.0"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
targetNamespace="qjy:vrp"
xmlns="qjy:vrp"
elementFormDefault="qualified">







<!-- global attribute -->
<xs:attribute name="id">
    <xs:simpleType>
        <xs:restriction base="xs:string">
            <xs:length value="25"></xs:length>
        </xs:restriction>
    </xs:simpleType>
</xs:attribute>

<xs:attribute name="name" type="xs:string" default="VRP">
</xs:attribute>

<xs:attribute name="namespace" type="xs:string"
fixed="qjy:vrp">
</xs:attribute>

<xs:attribute name="symmetric"
type="xs:boolean"></xs:attribute>

<xs:attribute name="solveTime" type="tenDigitDecimal">
</xs:attribute>

<xs:attribute name="gap" type="tenDigitDecimal"></xs:attribute>

<xs:attribute name="method">
    <xs:simpleType>
        <xs:restriction base="xs:string">
            <xs:enumeration value="exact"></xs:enumeration>
            <xs:enumeration value="heuristic"></xs:enumeration>
        </xs:restriction>
    </xs:simpleType>
</xs:attribute>

<xs:attribute name="serveTime" type="tenDigitDecimal"></xs:attribute>

<xs:attribute name="volume" type="tenDigitDecimal"></xs:attribute>

<xs:attribute name="timeLb" type="clockTime"></xs:attribute>

<xs:attribute name="timeUb" type="clockTime"></xs:attribute>

<xs:attribute name="number" type="tenDigitInteger"></xs:attribute>

<xs:attribute name="capacity" type="tenDigitDecimal"></xs:attribute>

<xs:attribute name="toCost" type="tenDigitDecimal"></xs:attribute>

<xs:attribute name="toTime" type="tenDigitDecimal"></xs:attribute>

<!-- root element-->
<xs:element name="vrp" type="vrp">
</xs:element>

<!-- global simpleType: restriction for text -->

<xs:simpleType name="clockTime">
    <xs:restriction base="xs:string">
            <xs:pattern value="([0-1][0-9]|2[0-3]):[0-5][0-9]"></xs:pattern>
    </xs:restriction>
</xs:simpleType>

<xs:simpleType name="tenDigitDecimal">
    <xs:restriction base="xs:decimal">
        <xs:totalDigits value="10"></xs:totalDigits>  
    </xs:restriction>
</xs:simpleType>

<xs:simpleType name="tenDigitInteger">
    <xs:restriction base="xs:integer">
        <xs:totalDigits value="10"></xs:totalDigits>
    </xs:restriction>
</xs:simpleType>

<xs:simpleType name="chars25">
    <xs:restriction base="xs:string">
        <xs:maxLength value="25"/>
    </xs:restriction>
</xs:simpleType>

<xs:simpleType name="solveMethods">
    <xs:restriction base="xs:string">
        <xs:enumeration value="exact"></xs:enumeration>
        <xs:enumeration value="heuristic"></xs:enumeration>
    </xs:restriction>
</xs:simpleType>

<!-- global complexType: construct reference relationship  -->
<xs:complexType name="vrp">
    <xs:all>
        <xs:element name="customers" type="customers"></xs:element>
        <xs:element name="depot" type="depot"></xs:element>
        <xs:element name="vehicles" type="vehicles"></xs:element> 
        <xs:element name="solveParam" type="solveParam"></xs:element>
        <xs:element name="routes"></xs:element>
    </xs:all>
    <xs:attribute ref="name"></xs:attribute>
    <xs:attribute ref="namespace" use="prohibited"></xs:attribute>
</xs:complexType>

<xs:complexType name="customers">
    <xs:sequence>
        <xs:element name="customer" type="customer" maxOccurs="unbounded"></xs:element>
    </xs:sequence>
</xs:complexType>

<xs:complexType name="customer">
    <xs:attribute name="name" use="required" type="chars25"></xs:attribute>
    <xs:attribute name="serveTime" use="required" type="tenDigitDecimal"></xs:attribute>
    <xs:attribute name="volume" use="required" type="tenDigitDecimal"></xs:attribute>
    <xs:attribute name="timeLb" use="required" type="clockTime"></xs:attribute>
    <xs:attribute name="timeUb" use="required" type="clockTime"></xs:attribute>
</xs:complexType>

<xs:complexType name="depot">
    <xs:attribute name="name" use="required" type="chars25"></xs:attribute>
</xs:complexType>

<xs:complexType name="vehicles">
    <xs:sequence>
        <xs:element name="vehicle" minOccurs="1" maxOccurs="unbounded" type="vehicle"></xs:element>
    </xs:sequence>
</xs:complexType>

<xs:complexType name="vehicle">
    <xs:attribute name="name" use="required" type="chars25"></xs:attribute>
    <xs:attribute name="number" use="required" type="tenDigitInteger"></xs:attribute>
    <xs:attribute name="capacity" use="required" type="tenDigitDecimal"></xs:attribute>
</xs:complexType>

<xs:complexType name="solveParam">
    <xs:attribute name="solveTime" default="3600" type="tenDigitDecimal"></xs:attribute>
    <xs:attribute name="gap" default="0.01" type="tenDigitDecimal"></xs:attribute>
    <xs:attribute name="method" default="exact" type="solveMethods"></xs:attribute>
</xs:complexType>

<xs:complexType name="route">
    <xs:sequence>
        <xs:element name="routeStart" maxOccurs="unbounded" type="routeStart"></xs:element>
    </xs:sequence>
    <xs:attribute name="symmetric" default="true" type="xs:boolean"></xs:attribute>
</xs:complexType>

<xs:complexType name="routeStart">
    <xs:sequence>
        <xs:element name="routeEnd" maxOccurs="unbounded"></xs:element>
    </xs:sequence>
    <xs:attribute name="name" use="required" type="chars25"></xs:attribute>
</xs:complexType>

